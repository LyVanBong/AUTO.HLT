<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AUTOHLT.MOBILE.Views.Home.HomePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icon="clr-namespace:AUTOHLT.MOBILE.Resources.Fonts;assembly=AUTOHLT.MOBILE"
             BackgroundColor="{StaticResource HeaderHome}"
             xmlns:markupExtensions="clr-namespace:AUTOHLT.MOBILE.MarkupExtensions;assembly=AUTOHLT.MOBILE"
             xmlns:controls="clr-namespace:AUTOHLT.MOBILE.Controls;assembly=AUTOHLT.MOBILE">
    <ContentPage.Content>
        <ScrollView BackgroundColor="{StaticResource Gray-White}"
                    Margin="0"
                    Padding="0"
                    VerticalScrollBarVisibility="Never">
            <Grid Margin="0"
                  Padding="0"
                  BackgroundColor="{StaticResource Gray-White}"
                  RowDefinitions="50,80,80,300,30,300,*"
                  RowSpacing="0">
                <!--<Image
                    Grid.Row="0"
                    Grid.RowSpan="8"
                    Aspect="AspectFit"
                    Source="{markupExtensions:ImageResource logo.png}" />-->
                <BoxView Grid.Row="0"
                         Grid.RowSpan="2"
                         BackgroundColor="{StaticResource HeaderHome}"
                         CornerRadius="{OnPlatform Android='0,0,50,50',iOS='0,0,30,30'}" />
                <StackLayout Grid.Row="0"
                             Margin="20,0"
                             Padding="0"
                             Orientation="Horizontal">
                    <Label Margin="0"
                           Padding="0"
                           FontSize="16"
                           HorizontalOptions="FillAndExpand"
                           TextColor="#fff"
                           VerticalOptions="CenterAndExpand">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontFamily="Awesome5ProSolid"
                                      FontSize="28"
                                      Text="{x:Static icon:FontAwesome5ProSolid.Home}"
                                      TextColor="#fff" />
                                <!--<Span Text="{Binding Name}" />-->
                                <Span Text="  " />
                                <Span Text="{Binding UserModel.Name}" />
                                <Span Text=" (" />
                                <!--<Span Text="{Binding UserName}" />-->
                                <Span Text="{Binding UserModel.UserName}" />
                                <Span Text=")" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label FontFamily="Awesome5ProSolid"
                           FontSize="20"
                           Text="{x:Static icon:FontAwesome5ProSolid.PowerOff}"
                           TextColor="#f4f4f2"
                           VerticalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                <Frame Grid.Row="1"
                       Grid.RowSpan="2"
                       Margin="20,0"
                       Padding="0"
                       BackgroundColor="{StaticResource Gray-White}"
                       BorderColor="{StaticResource Gray-300}"
                       CornerRadius="10"
                       HasShadow="True">
                    <Grid Margin="0"
                          Padding="10"
                          ColumnDefinitions="*,*,*,*"
                          ColumnSpacing="0"
                          RowDefinitions="30,*,30"
                          RowSpacing="0">
                        <Grid.Resources>
                            <Style TargetType="BoxView">
                                <Setter Property="BackgroundColor"
                                        Value="Transparent" />
                                <Setter Property="CornerRadius"
                                        Value="10" />
                                <Setter Property="Margin"
                                        Value="2" />
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Margin"
                                        Value="15" />
                                <Setter Property="Aspect"
                                        Value="AspectFit" />
                            </Style>
                        </Grid.Resources>
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               FontSize="16"
                               HorizontalOptions="FillAndExpand"
                               TextColor="{StaticResource Gray-800}"
                               VerticalOptions="CenterAndExpand">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontFamily="Awesome5ProSolid"
                                          Text="{x:Static icon:FontAwesome5ProSolid.MoneyCheckAlt}" />
                                    <Span Text=" " />
                                    <Span Text="{markupExtensions:Translate 1000018}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Grid.ColumnSpan="3"
                               FontSize="16"
                               HorizontalOptions="EndAndExpand"
                               TextColor="{StaticResource Gray-800}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding MoneyUser}" />
                                    <Span Text=" " />
                                    <Span FontFamily="Awesome5ProSolid"
                                          Text="{x:Static icon:FontAwesome5ProSolid.DollarSign}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               FontSize="12"
                               HorizontalOptions="CenterAndExpand"
                               Text="{markupExtensions:Translate 1000019}" />
                        <Label Grid.Row="2"
                               Grid.Column="1"
                               FontSize="12"
                               HorizontalOptions="CenterAndExpand"
                               Text="{markupExtensions:Translate 1000006}" />
                        <Label Grid.Row="2"
                               Grid.Column="2"
                               FontSize="12"
                               HorizontalOptions="CenterAndExpand"
                               Text="{markupExtensions:Translate 1000021}" />
                        <Label Grid.Row="2"
                               Grid.Column="3"
                               FontSize="12"
                               HorizontalOptions="CenterAndExpand"
                               Text="{markupExtensions:Translate 1000005}" />
                        <Image Grid.Row="1"
                               Grid.Column="0"
                               Source="{markupExtensions:ImageResource icon_transfer.png}" />
                        <Image Grid.Row="1"
                               Grid.Column="1"
                               Source="{markupExtensions:ImageResource icon_change_password.png}" />
                        <Image Grid.Row="1"
                               Grid.Column="2"
                               Source="{markupExtensions:ImageResource icon_notification.png}" />
                        <Image Grid.Row="1"
                               Grid.Column="3"
                               Source="{markupExtensions:ImageResource icon_account.png}" />
                        <BoxView Grid.Row="1"
                                 Grid.RowSpan="2"
                                 Grid.Column="0" />
                        <BoxView Grid.Row="1"
                                 Grid.RowSpan="2"
                                 Grid.Column="1" />
                        <BoxView Grid.Row="1"
                                 Grid.RowSpan="2"
                                 Grid.Column="2" />
                        <BoxView Grid.Row="1"
                                 Grid.RowSpan="2"
                                 Grid.Column="3" />
                    </Grid>
                </Frame>
                <Grid Grid.Row="3"
                      Margin="20"
                      Padding="0"
                      ColumnDefinitions="*,*,*"
                      ColumnSpacing="0"
                      RowDefinitions="*,*"
                      RowSpacing="0">
                    <Grid.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Margin"
                                    Value="10" />
                        </Style>
                        <Style TargetType="Label">
                            <Setter Property="HorizontalOptions"
                                    Value="CenterAndExpand" />
                            <Setter Property="VerticalOptions"
                                    Value="CenterAndExpand" />
                            <Setter Property="FontSize"
                                    Value="12" />
                        </Style>
                    </Grid.Resources>
                    <Frame Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_like.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000029}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="0"
                           Grid.Column="1"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_view.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000030}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="0"
                           Grid.Column="2"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_share.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000031}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_comments.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000032}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="1"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_follow.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000033}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="2"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_Interactive.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000026}" />
                        </Grid>
                    </Frame>
                </Grid>
                <BoxView Grid.Row="4"
                         Margin="20,0"
                         BackgroundColor="{StaticResource Gray-100}" />
                <Label Grid.Row="4"
                       Margin="20,0"
                       FontSize="16"
                       Text="{markupExtensions:Translate 1000028}"
                       VerticalOptions="CenterAndExpand" />
                <Grid Grid.Row="5"
                      Margin="20"
                      Padding="0"
                      ColumnDefinitions="*,*,*"
                      ColumnSpacing="0"
                      RowDefinitions="*,*"
                      RowSpacing="0">
                    <Grid.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Margin"
                                    Value="10" />
                        </Style>
                        <Style TargetType="Label">
                            <Setter Property="HorizontalOptions"
                                    Value="CenterAndExpand" />
                            <Setter Property="VerticalOptions"
                                    Value="CenterAndExpand" />
                            <Setter Property="FontSize"
                                    Value="12" />
                        </Style>
                    </Grid.Resources>
                    <Frame Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_revenue.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000022}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="0"
                           Grid.Column="1"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_settings.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000023}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="0"
                           Grid.Column="2"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_top_up.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000024}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_service.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000025}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="1"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_work.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000027}" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1"
                           Grid.Column="2"
                           Margin="5"
                           Padding="0"
                           BackgroundColor="{StaticResource Gray-100}"
                           BorderColor="{StaticResource Gray-300}"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid Margin="0"
                              Padding="0"
                              RowDefinitions="*,20">
                            <Image Grid.Row="0"
                                   Source="{markupExtensions:ImageResource icon_history.png}" />
                            <Label Grid.Row="1"
                                   Text="{markupExtensions:Translate 1000034}" />
                        </Grid>
                    </Frame>
                </Grid>
                <controls:LoadingView Grid.Row="0"
                                      Grid.RowSpan="7"
                                      IsVisible="{Binding IsLoading}" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>