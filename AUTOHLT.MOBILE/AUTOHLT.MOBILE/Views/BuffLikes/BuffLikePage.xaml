                        </Button>
                    </Grid>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="0">
                    <Grid RowDefinitions="50,30,30,30,60">
                        <Label
                            Grid.Row="0"
                            Style="{StaticResource IconLabel}"
                            Text="{x:Static icon:FontAwesome5ProSolid.HandPointRight}" />
                        <Label Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000049}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2year.Number, Converter={StaticResource StringToPrice}}" />
                                    <Span Text=" Like" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="2">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000050}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2year.TmpEndDate}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="3">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000056}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2year.Price, Converter={StaticResource StringToPrice}}" />
                                    <Span Text=" VND" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Button
                            Grid.Row="4"
                            Command="{Binding LikeUseServiceCommand}"
                            CommandParameter="{Binding Like2year}"
                            Text="{markupExtensions:Translate 1000052}">
                            <Button.Triggers>
                                <DataTrigger
                                    Binding="{Binding Like2year.IsRegisterProduct}"
                                    TargetType="Button"
                                    Value="True">
                                    <Setter Property="Button.Text" Value="{markupExtensions:Translate 1000053}" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1">
                    <Grid RowDefinitions="50,30,30,30,60">
                        <Label
                            Grid.Row="0"
                            Style="{StaticResource IconLabel}"
                            Text="{x:Static icon:FontAwesome5ProSolid.HandPointUp}" />
                        <Label Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000049}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2Forever.Number, Converter={StaticResource StringToPrice}}" />
                                    <Span Text=" Like" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="2">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000050}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2Forever.TmpEndDate}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="3">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000056}" />
                                    <Span Text=": " />
                                    <Span Text="{Binding Like2Forever.Price, Converter={StaticResource StringToPrice}}" />
                                    <Span Text=" VND" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Button
                            Grid.Row="4"
                            Command="{Binding LikeUseServiceCommand}"
                            CommandParameter="{Binding Like2Forever}"
                            Text="{markupExtensions:Translate 1000052}">
                            <Button.Triggers>
                                <DataTrigger
                                    Binding="{Binding Like2Forever.IsRegisterProduct}"
                                    TargetType="Button"
                                    Value="True">
                                    <Setter Property="Button.Text" Value="{markupExtensions:Translate 1000053}" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </Frame>
            </Grid>

            <controls:LoadingView
                Grid.Row="0"
                Grid.RowSpan="3"
                IsVisible="{Binding IsLoading}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>