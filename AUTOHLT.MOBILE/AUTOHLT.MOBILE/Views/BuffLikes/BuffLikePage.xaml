                               TextColor="{StaticResource ColorBuffLike}"
                               BackgroundColor="{StaticResource Gray-White}"
                               FontFamily="Awesome5ProSolid"
                               FontSize="60"
                               HorizontalOptions="Center"
                               Text="{x:Static icon:FontAwesome5ProSolid.HandPointLeft}"></Label>
                        <Label Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
