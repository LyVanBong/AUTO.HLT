                  Margin="0"
                  Padding="0"
                  RowSpacing="0"
                  RowDefinitions="*,*"
                  ColumnDefinitions="*,*">
                <Frame Grid.Row="0"
                       Grid.Column="0"
                       CornerRadius="10"
                       Padding="3"
                       Margin="10"
                       BorderColor="{StaticResource Gray-500}"
                       HasShadow="True"
                       BackgroundColor="{StaticResource Gray-White}">
                    <Grid Margin="0"
                          Padding="0"
                          RowDefinitions="90,30,30,60">
                        <Label Grid.Row="0"
                               TextColor="{StaticResource ColorBuffLike}"
                               BackgroundColor="{StaticResource Gray-White}"
                               FontFamily="Awesome5ProSolid"
                               FontSize="60"
                               HorizontalOptions="Center"
                               Text="{x:Static icon:FontAwesome5ProSolid.HandPointDown}"></Label>
                        <Label Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000049}"></Span>
                                    <Span Text=": "></Span>
                                    <Span Text="{Binding Like3001Nam}"></Span>
                                    <Span Text=" Like"></Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="2">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{markupExtensions:Translate 1000050}"></Span>
                                    <Span Text=": "></Span>
                                    <Span Text="{Binding Date3001Nam}"></Span>
                                    <Span Text=" "></Span>
                                    <Span Text="{markupExtensions:Translate 1000051}"></Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Button Grid.Row="3"
                                CornerRadius="10"
                                Margin="10,10"
                                Text="Su dung"></Button>
                    </Grid>
                </Frame>
                <Frame Grid.Row="0"
                       Grid.Column="1"
                       CornerRadius="10"
                       Padding="3"
                       Margin="10"
                       BorderColor="{StaticResource Gray-500}"
                       HasShadow="True"
                       BackgroundColor="{StaticResource Gray-White}">
